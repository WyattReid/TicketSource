@model TicketSource.Models.BuyViewModel

@{
    ViewBag.Title = "Buy Tickets";
}

<h2>Buy Tickets.</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.newTicket.Opponent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newTicket.Section)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newTicket.Row)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newTicket.Seat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newTicket.SellingPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newTicket.StudentPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AllTickets)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Row)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentPrice)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.TicketID})
            </td>
        </tr>
    }

</table>

<div id="stadPic">
    <img src="/Content/pictures/stad.gif" alt="Seat Reference">
</div>