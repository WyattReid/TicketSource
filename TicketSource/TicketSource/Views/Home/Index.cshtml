@{
    ViewBag.Title = "Home Page";
}


<div id="PageTop">
    <div class="jumbotron" id="j1">
        <h1>BuckeyeTicketSource</h1>
        <p class="lead">The preferred way to score student tickets, made for buckeyes everywhere.</p>
        <p class="lead">Get yours now...</p>
        <p>
            <a href="/buy" class="btn btn-primary btn-lg jbtn">Buy Tickets &raquo;</a>
            <a href="/sell" class="btn btn-primary btn-lg jbtn">Sell Tickets &raquo;</a>
        </p>
    </div>

    <div id="blocko">
        <img src="/Content/pictures/opic2m.jpg" alt="Block O">
    </div>
</div>

<div id="c1" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#c1" data-slide-to="0" class="active"></li>
        <li data-target="#c1" data-slide-to="1"></li>
        <li data-target="#c1" data-slide-to="2"></li>
        <li data-target="#c1" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="/Content/pictures/pic1.jpg" alt="Stadium View">
            <div class="carousel-caption">
                <h3>Ohio Stadium</h3>
                <p>The atmosphere in Ohio Stadium has a touch of Tradition and Pride.</p>
            </div>
        </div>

        <div class="item">
            <img src="/Content/pictures/pic2.jpg" alt="Tailgating">
            <div class="carousel-caption">
                <h3>Tailgating</h3>
                <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
            </div>
        </div>

        <div class="item">
            <img src="/Content/pictures/pic3.jpg" alt="Flower">
            <div class="carousel-caption">
                <h3>Victory</h3>
                <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
            </div>
        </div>

        <div class="item">
            <img src="/Content/pictures/pic4.jpg" alt="Flower">
            <div class="carousel-caption">
                <h3>2014 Undisputed Champions</h3>
                <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#c1" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#c1" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Real Ticket Guarantee</h2>
        <p>
            We guarantee you'll get the tickets you ordered in time for the event and they'll be valid for entry. If any
            of the above does not occur, we'll locate comparable replacement tickets or send you a refund.
        </p>
        
    </div>
    <div class="col-md-4">
        <h2>Transparent Pricing</h2>
        <p>Our Transparent Pricing policy allows all customers to see where the exact ticket price is coming from.</p>
       
    </div>
    <div class="col-md-4">
        <h2>Student Section Seating</h2>
        <p>TicketSource connects students and non-students allowing non-students the opportunity to buy
        students tickets at prices lower than major ticket retailers.</p>
       
    </div>
</div>